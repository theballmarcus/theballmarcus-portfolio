---
const { title, description, tech, logo, isPublic } = Astro.props;
---

<div class={`bg-white dark:bg-gray-700 rounded-2xl shadow p-6 hover:shadow-md transition flex items-start gap-4 ${isPublic ? 'cursor-pointer' : ''}`}>
  {logo && (
    <img src={logo} alt={`${title} logo`} class="w-12 h-12 object-contain rounded-md flex-shrink-0" />
  )}
  <div class="flex-1">
    <h3 class="text-xl font-semibold mb-2 text-gray-800 dark:text-gray-100">{title}</h3>
    <p class="text-gray-700 dark:text-gray-200 mb-2">
      {description}
    </p>
    <p class="text-sm text-gray-800 dark:text-gray-400">
      <strong>Built with: </strong> {tech}
    </p>
    <p class={`mt-4 text-sm font-semibold ${isPublic ? 'text-green-600 dark:text-green-400' : 'text-red-600 dark:text-red-400'}`}>
      Code: {isPublic ? 'Public (Images on GitHub)' : 'Private (Restricted)'}
    </p>
  </div>
</div>
